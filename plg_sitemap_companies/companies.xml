<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="plugin" group="sitemap" method="upgrade">
	<name>PLG_SITEMAP_COMPANIES</name>
	<author>Nerudas</author>
	<creationDate>August 2018</creationDate>
	<copyright>Copyright (c) 2015 - 2018 Nerudas. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>support@nerudas.ru</authorEmail>
	<authorUrl>nerudas.ru</authorUrl>
	<version>1.2.2</version>
	<description>PLG_SITEMAP_COMPANIES_DESCRIPTION</description>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_sitemap_companies.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_sitemap_companies.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_sitemap_companies.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_sitemap_companies.sys.ini</language>
	</languages>
	<files>
		<filename plugin="companies">companies.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<fieldset name="tag" label="JTAG">
					<field name="tag_changefreq" type="list" default="weekly"
						   label="PLG_SITEMAP_COMPANIES_PARAMS_CHANGEFREQ">
						<option value="always">always</option>
						<option value="hourly">hourly</option>
						<option value="daily">daily</option>
						<option value="weekly">weekly</option>
						<option value="monthly">monthly</option>
						<option value="yearly">yearly</option>
						<option value="never">never</option>
					</field>
					<field name="tag_priority" type="list"
						   default="0.5" label="PLG_SITEMAP_COMPANIES_PARAMS_PRIORITY">
						<option value="0.0">0.0</option>
						<option value="0.1">0.1</option>
						<option value="0.2">0.2</option>
						<option value="0.3">0.3</option>
						<option value="0.4">0.4</option>
						<option value="0.5">0.5</option>
						<option value="0.6">0.6</option>
						<option value="0.7">0.7</option>
						<option value="0.8">0.8</option>
						<option value="0.9">0.9</option>
						<option value="1">1</option>
					</field>
				</fieldset>
				<fieldset name="company" label="PLG_SITEMAP_COMPANIES_PARAMS_COMPANY">
					<field name="company_changefreq" type="list" default="weekly"
						   label="PLG_SITEMAP_COMPANIES_PARAMS_CHANGEFREQ">
						<option value="always">always</option>
						<option value="hourly">hourly</option>
						<option value="daily">daily</option>
						<option value="weekly">weekly</option>
						<option value="monthly">monthly</option>
						<option value="yearly">yearly</option>
						<option value="never">never</option>
					</field>
					<field name="company_priority" type="list"
						   default="0.5" label="PLG_SITEMAP_COMPANIES_PARAMS_PRIORITY">
						<option value="0.0">0.0</option>
						<option value="0.1">0.1</option>
						<option value="0.2">0.2</option>
						<option value="0.3">0.3</option>
						<option value="0.4">0.4</option>
						<option value="0.5">0.5</option>
						<option value="0.6">0.6</option>
						<option value="0.7">0.7</option>
						<option value="0.8">0.8</option>
						<option value="0.9">0.9</option>
						<option value="1">1</option>
					</field>
				</fieldset>
			</fieldset>
		</fields>
	</config>
</extension>